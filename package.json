{
  "name": "@pablozaiden/compass",
  "version": "0.0.0-development",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "module": "src/index.ts",
  "type": "module",
  "bin": {
    "compass": "src/index.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19"
  },
  "peerDependencies": {
    "typescript": "5.9.3"
  },
  "dependencies": {
    "@opentui/core": "0.1.68",
    "@opentui/react": "^0.1.68",
    "react": "19",
    "tslog": "^4.10.2"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "build": "bunx tsc --noEmit",
    "compile": "export workspace_dir=$(pwd); export build_output=$(mktemp); bun install; (cd /tmp; bun build --compile --outfile=$build_output $workspace_dir/src/index.ts; mkdir -p $workspace_dir/out; mv $build_output $workspace_dir/out/compass)",
    "test:anonymous": "bun test --test-name-pattern \"anonymous\"",
    "test:all": "bun test",
    "test:gemini": "bun test --test-name-pattern \"Gemini\"",
    "test:opencode": "bun test --test-name-pattern \"OpenCode\"",
    "test:copilot": "bun test --test-name-pattern \"Copilot\"",
    "test:claude": "bun test --test-name-pattern \"ClaudeCode\"",
    "test:codex": "bun test --test-name-pattern \"Codex\"",
    "docker:build": "docker build -t compass ."
  }
}
